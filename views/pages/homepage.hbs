<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>

<!-- BOOTSTRAP NAVBAR-->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">CRUD</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <button class="btn btn-link" onclick="window.location.href='/about-us'">Acerca de nosotros</button>
      </li>
    </ul>
  </div>
</nav>

<div class="mx-auto mt-4 mb-4" style="width: 270px;">
    <h2>Lista de productos</h2>
</div>

<div class="mx-auto mt-4 mb-5" style="width: 210px;">
    <button class="btn btn-primary mt-2" onclick="window.location.href='/addForm'" >Agregar nuevo producto</button>
</div>

<div class="mx-auto" style="width:290px;">
{{#each products}}
<div class="card bg-light mb-3" style="max-width: 18rem;">
  <div class="card-header"> ID: {{id}} </div>
  <div class="card-body">
    <h5 class="card-title"> {{name}} </h5>
    <p class="card-text mb-3"> {{description}} </p>
    <p class="card-text">Precio: ${{price}}</p>
  </div>
  <div class="card-header">
    <ul class="nav nav-pills card-header-pills">
      <li class="nav-item">
        <button class="btn btn-primary mr-2" onclick="window.location.href='/showProduct/:{{id}}'" >Ver</button>
      </li>
      <li class="nav-item">
        <button class="btn btn-secondary mr-2" onclick="window.location.href='/editForm/:{{id}}'">Editar</button>

      </li>
      <li class="nav-item">
        <button class="btn btn-danger mr-2" onclick="window.location.href='/deleteProduct/:{{id}}'">Eliminar</button>
      </li>
    </ul>
  </div>
</div>
{{/each}}
</div>

<!-- Latest compiled and minified JavaScript -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>



